@{
        Layout= "_DashboardLayout";
}
@model Product;
<div class="dash-content">
    <div class="dash-content">
        <div class="overview">
            <div class="title">
                <i class="uil uil-tachometer-fast-alt"></i>
                <span class="text">Adding Product</span>
            </div>

            <div>
                <form method="post" class="row" asp-action="AddProduct">
                    <div class="mb-3">
                        <label for="" class="form-label" asp-for="Name">Product Name</label>
                        <input type="text" asp-for="Name" class="form-control" placeholder="" />

                    </div>
                    <div class="mb-3">
                        <label for="" asp-for="Description" class="form-label">Product Description</label>
                        <textarea type="text" asp-for="Description"  class="form-control" placeholder=""></textarea>
                    </div>
                    <div class="mb-3 col-lg-6">
                        <label for="" asp-for="Quantity" class="form-label">Product Quantity</label>
                        <input type="number" asp-for="Quantity"  class="form-control" placeholder=""></input>
                    </div>
                    <div class="mb-3 col-lg-6">
                        <label for="" class="form-label" asp-for="Price" >Product Price</label>
                        <input type="number" asp-for="Price"  class="form-control" placeholder=""></input>
                    </div>
                    <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="enableSize" type="checkbox" value="true"  />
                            <label class="form-check-label" asp-for="enableSize" for=""> Enable Product Size </label>
                        </div>


                    </div>

                    <div class="mb-3 col-lg-6">
                        <label for="" asp-for="Comp.Id" class="form-label">company</label>
                        <select class="form-select " asp-for="Comp.Id" >
                            <option selected>Select one</option>
                            <option value="1">nike</option>
                            <option value="2">adidas</option>
                        </select>
                    </div>

                    <div class=" mb-3 col-lg-5 d-flex align-items-center mt-lg-4 ">
                        <input class="form-control" type="file" id="formFile">
                    </div>

                    <div class="col-lg-12 d-flex justify-content-center  ">

                        <button type="submit" class="btn btn-primary">Submit</button>

                    </div>
                </form>

            </div>
        </div>
    </div>
