@model Product;

@{
    ViewData["Title"] = "Home Page";
    Layout = "_DashboardLayout";
}

<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Adding Product</span>
    </div>

    <div>
        <form action="post" asp-action="create" class="row">
            <div class="mb-3">
                <label for="" asp-for="Name" class="form-label">Product Name</label>
                <input asp-for="Name" type="text" id="" class="form-control" placeholder="" />

            </div>
            <div class="mb-3">
                <label for="" class="form-label">Product Description</label>
                <textarea type="text" name="" id="" class="form-control" placeholder=""></textarea>
            </div>
            <div class="mb-3 col-lg-6">
                <label for="" asp-for="Quantity" class="form-label">Product Quantity</label>
                <input type="number" asp-for="Quantity" id="" class="form-control" placeholder=""></input>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="Price" for="" class="form-label">Product Price</label>
                <input type="number" asp-for="Price" name="" id="" class="form-control" placeholder=""></input>
            </div>
            <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="" />
                    <label class="form-check-label" for=""> Enable Product Size </label>
                </div>


            </div>

            <div class="mb-3 col-lg-6">
                <label for="" class="form-label">company</label>
                <select class="form-select " asp-for="Comp.Id" name="" id="">
                    <option selected>Select one</option>
                    <option value="1">nike</option>
                    <option value="2">adidas</option>
                </select>
            </div>

            <div class=" mb-3 col-lg-5 d-flex align-items-center mt-lg-4 ">
                <input class="form-control" type="file" id="formFile">
            </div>

            <div class="col-lg-12 d-flex justify-content-center  ">

                <button type="submit" class="btn btn-primary">Submit</button>

            </div>
        </form>

    </div>
</div>